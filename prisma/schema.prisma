generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Blog {
  id        String  @id @default(cuid()) @map("_id")
  slug      String  @unique
  title     String
  content   String
  published Boolean @default(false)

  authorId   String
  authorName String
  authorImg  String

  noOfLikes Int    @default(0)
  likes     Like[]

  noOfComments Int       @default(0)
  comments     Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Like {
  id String @id @default(cuid()) @map("_id")

  blog   Blog   @relation(fields: [blogId], references: [id])
  blogId String

  authorId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id      String @id @default(cuid()) @map("_id")
  content String

  blog   Blog   @relation(fields: [blogId], references: [id])
  blogId String

  authorId   String
  authorName String
  authorImg  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
